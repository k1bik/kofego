<% flash.each do |type, message| %>
  <div
    data-controller="notification"
    data-notification-delay-value="3000"
    class="transition transform duration-1000 fixed top-4 left-1/2 -translate-x-1/2 z-50 max-w-md w-auto"
    data-transition-enter-from="opacity-0 -translate-y-6"
    data-transition-enter-to="opacity-100 translate-y-0"
    data-transition-leave-from="opacity-100 translate-y-0"
    data-transition-leave-to="opacity-0 -translate-y-6"
  >
    <% case type %>
    <% when "notice" %>
      <div role="alert" class="alert alert-success">
        <%= inline_svg "icons/check-circle.svg" %>
        <span><%= message %></span>
      </div>
    <% when "alert" %>
      <div role="alert" class="alert alert-error">
        <%= inline_svg "icons/x-circle.svg" %>
        <span><%= message %></span>
      </div>
    <% end %>
  </div>
<% end %>
