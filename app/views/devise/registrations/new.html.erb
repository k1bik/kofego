<div class="flex items-center justify-center mt-12">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <fieldset class="fieldset bg-base-100 rounded-box w-md p-4">
      <legend class="fieldset-legend text-xl"><%= t("sign_up") %></legend>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= f.label :email, t("email"), class: "label" %>
      <%= f.email_field :email, class: "input w-full", placeholder: t("email") %>

      <%= f.label :name, t("name"), class: "label" %>
      <%= f.text_field :name, class: "input w-full", placeholder: t("name") %>

      <%= f.label :password, t("password"), class: "label" %>
      <%= f.password_field :password, class: "input w-full", placeholder: t("password"), autocomplete: "new-password" %>
      <em>(<%= @minimum_password_length %> <%= t("characters_minimum") %>)</em>

      <%= f.label :password_confirmation, t("password_confirmation"), class: "label" %>
      <%= f.password_field :password_confirmation, class: "input w-full", placeholder: t("password_confirmation"), autocomplete: "new-password" %>

      <%= f.submit t("sign_up"), class: "btn btn-neutral mt-4" %>

      <%= render "devise/shared/links" %>
    </fieldset>
  <% end %>
</div>
